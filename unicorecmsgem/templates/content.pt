<div metal:use-macro="view.global_template">
    <div metal:fill-slot="content" class="articles">

        <div class="h1">
            <a href="/content/list/${page.primary_category.uuid}/">${page.primary_category.title}</a>
        </div>

        <div class="detail">
            <div class="head">
                <div class="meta no-pic">${page.created_at.strftime('%d %b %Y')}</div>
                <div class="h2 no-pic">${page.title}</div>
            </div>
            <div class="clr"></div>
            <p>${structure:content}</p>
            <div class="items">
                <div class="item" tal:repeat="linked_page page.get_linked_pages()">
                    <a href="/content/detail/${linked_page.uuid}/">
                        &raquo; ${linked_page.title}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
